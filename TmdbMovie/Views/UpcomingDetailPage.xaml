<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TmdbMovie.Views.UpcomingDetailPage"
             Title="{Binding Title}">
    <StackLayout>
        <Label Text="Title:" FontSize="12"   FontAttributes="Bold"  />
        <Label Text="{Binding Movie.title}" FontSize="14"/>

        <Image Source="{Binding Movie.poster_path}" HeightRequest="100"></Image>

        <Label Text="Overview:" FontSize="12" FontAttributes="Bold" />
        <Label Text="{Binding Movie.overview}" FontSize="14"/>

        <Label Text="Releas Date:" FontSize="12"  FontAttributes="Bold" />
        <Label Text="{Binding Movie.release_date}" FontSize="14"/>
        
    </StackLayout>
</ContentPage>